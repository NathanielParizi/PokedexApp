<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ui.ProfileFragment">

    <TextView
        android:id="@+id/pokemonTextView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Enter Pokemon Name:" />

    <EditText
        android:id="@+id/pokemonEditText"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:hint="Enter Pokemon Name"
        android:text="Bulbasaur" />

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:hint="Search Pokemon" />

    <Button
        android:id="@+id/buyBtn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="25dp"
        android:hint="Buy Pokemon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pokemonNameTextView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="15dp"
            android:text="PokemonName: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pokemonIdTextView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="15dp"
            android:text="Id: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pokemonAbilityTextView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="15dp"
            android:text="Ability: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pokemonCost"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="15dp"
            android:text="Cost"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/userProfileTxtView"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:text="User Profile:" />

    <EditText
        android:id="@+id/firstNameEditTxt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:hint="Enter first name" />

    <EditText
        android:id="@+id/lastNameEditTxt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:hint="Enter last name" />

    <EditText
        android:id="@+id/accountNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:hint="Enter account number" />

    <EditText
        android:id="@+id/balanceEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:hint="Enter cash balance" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:hint="Enter email" />


</LinearLayout>